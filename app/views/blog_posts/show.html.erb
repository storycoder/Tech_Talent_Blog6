<p id="notice"><% notice %></p>

<div class="panel panel-primary">
  <div class="panel-heading">
    <h3><%= @blog_post.title %></h3>
  </div>
  <div class="panel-body">
    <p>by <%= @blog_post.author %></p>
    <p><%= @blog_post.blog_entry %></p>
  </div>
  <div class="panel-footer">
    <%= link_to 'Edit Post', edit_blog_post_path(@blog_post), class: "btn btn-warning" %>
  </div>
</div>

<div class="panel panel-success">
  <div class="panel-heading">
  Make a Comment
  </div>
  <div class="panel-body">
    <%= render 'comments/form' %>
  </div>
</div>

<div class="panel panel-default">
  <div class="panel-header">
    <h4>Comments</h4>
  </div>
  <% @blog_post.comments.each do |comment| %>
  <div class="panel-body">
    <p><strong><%= commen.author %></strong> said: </p>
    <p><%= comment.comment_entry %></p>
    <p><span class="posted_at">posted at: t<%= @blogpost.created_at.strftime('%m-%d-%Y at %I:%M%p') %></span></p>
  </div>
  <%end%>
</div>

<div class="panel-footer">
  <%= link_to 'Back to Index', blog_posts_path, class: "btn btn-primary" %>
</div>